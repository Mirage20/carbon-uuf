{{layout "main"}}
{{favicon "images/favicon.png" type="image/png"}}
{{title "Register | " @config.appName}}
{{css "css/login.css"}}

{{#fillZone "content"}}
    {{#if errorMessage}}
        <div class="alert alert-danger" role="alert">
            <i class="icon fw fw-error"></i><strong>Registration Error!</strong>
            {{errorMessage}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{/if}}
    <div class="page-content-wrapper">
        <div class="container">
            <div class="signup-form-wrapper">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-3 col-lg-3">
                        <div class="brand-container add-margin-bottom-5x">
                            <div class="row">
                                <div class="col-xs-6 col-sm-3 col-md-9 col-lg-9 center-block float-remove-sm float-remove-xs pull-right-md pull-right-lg">
                                    <img class="img-responsive brand-spacer" src="{{public "images/logo-white.png"}}" />
                                </div>
                            </div>
                            <h2 class="text-center-sm text-center-xs text-center-md text-right">{{@config.appName}}</h2>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-9 col-lg-9 login">
                        <div class="data-container">
                            <form class="form-horizontal" method="post">
                                <h3>Create account</h3>
                                <p>Please fill in the below form to create an account</p>
                                <div class="form-group add-margin-top-5x">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-name" class="control-label">Username:</label>
                                        <input type="text" class="form-control" name="input-username">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-pass" class="control-label">Password:</label>
                                        <input type="password" class="form-control" name="input-password">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-confirm-pass" class="control-label">Confirm Password:</label>
                                        <input type="password" class="form-control" name="input-confirm-password">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-first-name" class="control-label">First Name:</label>
                                        <input type="text" class="form-control" name="input-first-name">
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-last-name" class="control-label">Last Name:</label>
                                        <input type="text" class="form-control" name="input-last-name">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-email" class="control-label">Email:</label>
                                        <input type="email" class="form-control" name="input-email">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-sec-questions" class="control-label">Security
                                                                                               Question:</label>
                                        <select id="input-sec-questions" class="form-control">
                                            <option>Please select a security question</option>
                                            <option>What is your favourite pet's name?</option>
                                            <option>What is the color of your pet?</option>
                                            <option>What is the type of your pet?</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <label for="input-sec-answer" class="control-label">Answer:</label>
                                        <input type="text" class="form-control" id="input-sec-answer">
                                    </div>
                                </div>
                                <div class="form-group add-margin-top-5x">
                                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-5">
                                        <button type="submit" class="btn btn-default btn-primary add-margin-right-2x">
                                            Register
                                        </button>
                                        <button type="button"
                                                class="btn btn-default btn-secondary hidden-xs hidden-sm cancel-btn-font">
                                            <a href="{{@contextPath}}/simple-auth/login">Cancel</a></button>
                                    </div>
                                </div>
                            </form>
                        </div>
                        <p class="visible-xs visible-sm add-margin-2x text-center">Don't have an account? <a
                                href="{{@contextPath}}/simple-auth/register">Register Now</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/fillZone}}