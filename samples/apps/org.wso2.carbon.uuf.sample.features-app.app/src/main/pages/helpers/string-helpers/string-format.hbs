{{layout "org.wso2.carbon.uuf.sample.foundation.ui.main"}}
{{title "String Format | String Helper Sample | " @config.appName}}
{{fragment "org.wso2.carbon.uuf.sample.foundation.ui.highlight" theme=@config.highlightjsTheme}}

{{#fillZone "content"}}
    <h3><b>stringFormat</b> Helper</h3>
    <hr />
    <p>Formats the variable according to a string formatting specifier.</p>

    <div>
        <figure class="highlight">
            <pre class="code lang-handlebars">\{{stringFormat value &lt;params&gt;...}}</pre>
        </figure>
        <p><b>value</b> - formatting specifier</p>
        <p><b>params</b> - list of parameters</p>
    </div>

    <div style="margin-top: 40px">
        <h4><b>Example</b></h4>
        <figure class="highlight">
            <pre class="code lang-handlebars">
            &lt;div&gt;
                \{{stringFormat value param}}
            &lt;/div&gt;</pre>
        </figure>
        <p>when used with this context:</p>
        <figure class="highlight">
            <pre class="code lang-javascript">
            function onRequest(env) {
                return {
                    value: "Hello %s",
                    param: "handlebars.java"
                };
            }</pre>
        </figure>
        <p>will result in:</p>
        <figure class="highlight">
            <pre class="code lang-handlebars">
            &lt;div&gt;
                {{stringFormat value param}}
            &lt;/div&gt;</pre>
        </figure>
    </div>
{{/fillZone}}
