{{layout "org.wso2.carbon.uuf.sample.foundation.ui.main"}}
{{title "Default If Empty | String Helper Sample | " @config.appName}}
{{fragment "org.wso2.carbon.uuf.sample.foundation.ui.highlight" theme=@config.highlightjsTheme}}

{{#fillZone "content"}}
    <h3><b>defaultIfEmpty</b> Helper</h3>
    <hr />
    <p>Assign a default value to a string if the string is evaluated as false.</p>

    <div>
        <figure class="highlight">
            <pre class="code lang-handlebars">\{{defaultIfEmpty &lt;value&gt; [default=""]}}</pre>
        </figure>
        <p><b>value</b> - string to be evaluated</p>
        <p><b>arg</b> - default value</p>
    </div>

    <div style="margin-top: 40px">
        <h4><b>Example</b></h4>
        <figure class="highlight">
            <pre class="code lang-handlebars">
            &lt;div&gt;
                \{{defaultIfEmpty value default}}
            &lt;/div&gt;</pre>
        </figure>
        <p>when used with this context:</p>
        <figure class="highlight">
            <pre class="code lang-javascript">
            function onRequest(env) {
                return {
                    value: "",
                    default: "nothing"
                };
            }</pre>
        </figure>
        <p>will result in:</p>
        <figure class="highlight">
            <pre class="code lang-handlebars">
            &lt;div&gt;
                {{defaultIfEmpty value default}}
            &lt;/div&gt;</pre>
        </figure>
    </div>
{{/fillZone}}
