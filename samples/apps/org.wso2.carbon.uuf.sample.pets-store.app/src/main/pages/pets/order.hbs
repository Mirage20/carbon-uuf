{{secured}}
{{layout "org.wso2.carbon.uuf.sample.foundation.ui.main"}}
{{title (i18n "pets-store.page.order.title") " | " (i18n "app.name")}}

{{#fillZone "content"}}
    <div class="page-header">
        <h1>{{i18n "pets-store.page.order.heading"}}</h1>
    </div>
    {{#if madeOrder}}
        <div class="alert alert-success" role="alert">
            <i class="icon fw fw-success"></i><strong>{{i18n "pets-store.page.order.alert.heading"}}</strong>
            {{i18n "pets-store.page.order.alert.message" petCategory userEmail}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{/if}}
    <form id="form-order" class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-12">
                <label for="pet-category" class="control-label">
                    {{i18n "pets-store.page.order.form.pet-category"}}<span class="">*</span>
                </label>
                <select name="pet-category" id="pet-category" class="form-control" required>
                    <option>Puppy</option>
                    <option>Kitten</option>
                    <option>Bunny</option>
                    <option>Squirrel</option>
                    <option>Parrot</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="pet-age" class="control-label">{{i18n "pets-store.page.order.form.pet-age"}}</label>
                <select name="pet-age" id="pet-age" class="form-control">
                    <option>Up to 1 month</option>
                    <option>Up to 3 months</option>
                    <option>Up to 6 months</option>
                    <option>Up to 1 year</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="credit-card" class="control-label">
                    {{i18n "pets-store.page.order.form.credit-card"}}<span class="">*</span>
                </label>
                <input name="credit-card" id="credit-card" type="text" pattern="[0-9]{13,16}" class="form-control"
                       required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="user-email" class="control-label">
                    {{i18n "pets-store.page.order.form.email"}}<span class="">*</span>
                </label>
                <input name="user-email" id="user-email" type="email" class="form-control" required />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-default btn-primary">
                    {{i18n "pets-store.page.order.form.submit"}}
                </button>
            </div>
        </div>
        {{csrfToken}}
    </form>
{{/fillZone}}
