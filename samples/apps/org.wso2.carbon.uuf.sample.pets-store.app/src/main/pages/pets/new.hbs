{{secured}}
{{layout "org.wso2.carbon.uuf.sample.foundation.ui.main"}}
{{title (i18n "pets-store.page.add.title") " | " (i18n "app.name")}}

{{#fillZone "content"}}
    <div class="page-header">
        <h1>{{i18n "pets-store.page.add.heading"}}</h1>
    </div>
    {{#if success}}
        <div class="alert alert-success" role="alert">
            <i class="icon fw fw-success"></i><strong>{{i18n "pets-store.page.add.alert.heading"}}</strong>
            {{i18n "pets-store.page.add.alert.message" petCategory petName}}
            <button type="button" class="close" aria-label="close" data-dismiss="alert">
                <span aria-hidden="true">
                    <i class="fw fw-cancel"></i>
                </span>
            </button>
        </div>
    {{/if}}
    <form id="form-add" class="form-horizontal" method="post">
        <div class="form-group">
            <div class="col-sm-12">
                <label for="name" class="control-label">
                    {{i18n "pets-store.page.add.form.name"}} <span class="">*</span>
                </label>
                <input type="text" name="name" id="name" class="form-control" required />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="category" class="control-label">{{i18n "pets-store.page.add.form.category"}}</label>
                <select name="category" id="category" class="form-control">
                    <option>Puppy</option>
                    <option>Kitten</option>
                    <option>Bunny</option>
                    <option>Squirrel</option>
                    <option>Parrot</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="colour" class="control-label">{{i18n "pets-store.page.add.form.colour"}}</label>
                <select name="colour" id="colour" class="form-control">
                    <option>White</option>
                    <option>Black</option>
                    <option>Brown</option>
                    <option>Green</option>
                    <option>Grey</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <label for="about" class="control-label">{{i18n "pets-store.page.add.form.about"}}</label>
                <textarea name="about" id="about" class="form-control" rows="3"
                          placeholder="{{i18n "pets-store.page.add.form.about.placeholder"}}"></textarea>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-default btn-primary">
                    {{i18n "pets-store.page.add.form.submit"}}
                </button>
            </div>
        </div>
        {{csrfToken}}
    </form>
{{/fillZone}}
