{{secured}}
{{layout "org.wso2.carbon.uuf.sample.foundation.ui.main"}}
{{! If you like, you can set the favicon for this page with 'favicon' helper. }}
{{favicon "images/favicon.png" type="image/png"}} {{! This will overrride the default favicon set in the layout. }}
{{title (i18n "pets-store.page.home.title") " | " (i18n "app.name")}}

{{#fillZone "content"}}
    <div class="page-header">
        <h1>{{i18n "pets-store.page.home.heading"}}</h1>
        <p class="lead">{{i18n "pets-store.page.home.sub-heading"}}</p>
    </div>
    <div class="row">
        <div class="media tab-responsive">
            <div class="media-left col-xs-1 col-sm-1 col-md-2 col-lg-2 hidden-xs">
                <ul class="list-group nav nav-pills nav-stacked" role="tablist">
                    <li class="list-group-item">
                        <a href="{{@contextPath}}/pets">
                            <i class="fw fw-tiles fw-2x"></i> {{i18n "pets-store.page.home.link.see-all"}}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="{{@contextPath}}/pets/new">
                            <i class="fw fw-add fw-2x"></i> {{i18n "pets-store.page.home.link.add-new"}}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="{{@contextPath}}/pets/snowball">
                            <i class="fw fw-star fw-2x"></i> {{i18n "pets-store.page.home.link.month-pet"}}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="{{@contextPath}}/pets/order">
                            <i class="fw fw-store fw-2x"></i> {{i18n "pets-store.page.home.link.order-new"}}
                        </a>
                    </li>
                    <li class="list-group-item">
                        <a href="{{@contextPath}}/users">
                            <i class="fw fw-user fw-2x"></i> {{i18n "pets-store.page.home.link.user-mgt"}}
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{{/fillZone}}
